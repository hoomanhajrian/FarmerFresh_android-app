<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmerFresh" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Pri_Green_1</item>
        <item name="colorPrimaryVariant">@color/Pri_Green_1</item>
        <item name="colorOnPrimary">@color/back_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Sec_green</item>
        <item name="colorSecondaryVariant">@color/Sec_orange</item>
        <item name="colorOnSecondary">@color/Sec_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.FarmerFresh.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FarmerFresh.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FarmerFresh.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>