<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/divider"
    app:cardElevation="@dimen/divider"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal"
        android:id="@+id/cart_parent">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:background="@drawable/default_image"
            android:id="@+id/cv_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/divider"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/cv_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stark farms"
                android:layout_weight="1"
                android:textColor="@color/Sec_black"
                android:textSize="@dimen/size_h1"
                android:fontFamily="sans-serif-condensed-medium"/>


            <ImageView
                android:id="@+id/cancel_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_cross"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cv_farm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Farm Name"
                    android:layout_marginTop="@dimen/divider"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/size_normal" />


                <TextView
                    android:id="@+id/cv_qnty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Qnty"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="@dimen/divider"
                    android:layout_marginTop="@dimen/divider"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/Sec_red"
                    android:textSize="@dimen/size_h2" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>