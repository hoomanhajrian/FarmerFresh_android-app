<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_green_border"
    android:id="@+id/parent_view"
    app:cardCornerRadius="@dimen/divider"
    app:cardElevation="@dimen/divider"
    android:layout_margin="@dimen/small_padding">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:padding="@dimen/divider"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/default_image"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/divider"
            android:layout_marginRight="@dimen/divider"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Apple"
            android:textColor="@color/Sec_black"
            android:textSize="@dimen/product_highlight"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Ambrosia"
            android:textColor="@color/Sec_orange"
            android:textSize="@dimen/size_h2" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="$1.13"
            android:textColor="@color/Sec_black"
            android:textSize="@dimen/product_highlight"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>