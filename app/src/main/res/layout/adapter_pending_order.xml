<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:id="@+id/rl_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/basic_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl">
        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order:12345-4545"
            android:textColor="@color/Pri_Green_1"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/order_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27-Feb-2021"
            android:layout_alignParentEnd="true"
            android:textColor="@color/Sec_black"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_marginTop="20dp"
        android:layout_alignBottom="@id/rl">
        <TextView
            android:id="@+id/order_farm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunrise Farm"
            android:textColor="@color/Sec_black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$50"
            android:layout_alignParentEnd="true"
            android:textColor="@color/Sec_black"
            android:textSize="16sp"/>
    </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>